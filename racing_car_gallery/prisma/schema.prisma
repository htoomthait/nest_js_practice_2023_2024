generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model CarType {
  id         Int          @id @default(autoincrement())
  name       String       @db.VarChar(100)
  status     ActiveStatus @default(active)
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt

  @@map("car_types")
}

model CarBrand {
  id                Int          @id @default(autoincrement())
  name              String       @db.VarChar(128)
  country_of_origin String       @db.VarChar(128)
  established_year  Int          @default(1900)
  logo_img          String       @db.VarChar(512)
  status            ActiveStatus @default(active)
  created_at        DateTime     @default(now())
  updated_at        DateTime     @updatedAt

  @@map("car_brands")
}

enum ActiveStatus {
  active
  inactive
}
